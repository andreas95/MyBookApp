                <Line stroke="#3c3c46" strokeWidth="1" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="270.0" startX="0" endX="300"/>

                <CustomPasswordField fx:id="FieldConfirmPassword" promptText="Confirm your Password" AnchorPane.topAnchor="280.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="20.0" styleClass="custom-password-field" minHeight="35.0" maxHeight="35.0" prefHeight="35.0">
