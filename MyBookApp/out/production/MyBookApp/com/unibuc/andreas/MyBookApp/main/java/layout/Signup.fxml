                        <Font size="13.0" name="Proxima Nova Regular"/>
                    </font>
                    <left>
                        <Glyph fontFamily="FontAwesome" icon="ENVELOPE" textFill="#5d5d66" fontSize="17.0"/>
                    </left>
                </CustomTextField>

                <Line stroke="#3c3c46" strokeWidth="1" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="170.0" startX="0" endX="300"/>

                <CustomTextField fx:id="FieldUsername" promptText="User Name" AnchorPane.topAnchor="180.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="20.0" styleClass="custom-field" minHeight="35.0" maxHeight="35.0" prefHeight="35.0">
