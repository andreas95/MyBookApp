                <CustomPasswordField fx:id="FieldPassword" promptText="Enter your Password" AnchorPane.topAnchor="230.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="20.0" styleClass="custom-password-field" minHeight="35.0" maxHeight="35.0" prefHeight="35.0">
