            <children>
                <Text AnchorPane.topAnchor="25.0" AnchorPane.leftAnchor="110.0" text="SIGN UP NOW" onMouseClicked="#signup" fill="#ffffff" styleClass="button-hover">
                    <font>
                        <Font size="16.0" name="Proxima Nova Bold" />
                    </font>
                </Text>
