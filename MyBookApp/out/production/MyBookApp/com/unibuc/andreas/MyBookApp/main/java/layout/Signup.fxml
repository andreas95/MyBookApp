                <Text AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="360.0" fill="#b6b6b6" text="Sing In" onMouseClicked="#singin" styleClass="text-hover">
                    <font>
                        <Font size="13.0" name="Proxima Nova Regular"/>
                    </font>
                </Text>
                <Text AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="360.0" AnchorPane.bottomAnchor="40.0" fill="#b6b6b6" text="Forget Password?" onMouseClicked="#recover" styleClass="text-hover">
