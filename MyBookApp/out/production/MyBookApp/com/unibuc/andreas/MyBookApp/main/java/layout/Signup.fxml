    <children>

        <AnchorPane fx:id="ContentPanel" AnchorPane.topAnchor="0.0" prefWidth="330" minWidth="330" maxWidth="330" styleClass="content">
            <children>

                <CustomTextField fx:id="FieldFirstName" promptText="First Name" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="20.0" styleClass="custom-field" minHeight="35.0" maxHeight="35.0" prefHeight="35.0">
                <font>
                    <Font size="13.0" name="Proxima Nova Regular"/>
                </font>
                <left>
                    <Glyph fontFamily="FontAwesome" icon="USER" textFill="#5d5d66" fontSize="17.0"/>
                </left>
                </CustomTextField>

                <Line stroke="#3c3c46" strokeWidth="1" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="70.0" startX="0" endX="300"/>

                <CustomTextField fx:id="FieldLastName" promptText="Last Name" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="20.0" styleClass="custom-field" minHeight="35.0" maxHeight="35.0" prefHeight="35.0">
                    <font>
                        <Font size="13.0" name="Proxima Nova Regular"/>
                    </font>
                    <left>
                        <Glyph fontFamily="FontAwesome" icon="USER" textFill="#5d5d66" fontSize="17.0"/>
                    </left>
                </CustomTextField>

                <Line stroke="#3c3c46" strokeWidth="1" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="120.0" startX="0" endX="300"/>

                <CustomTextField fx:id="FieldEmail" promptText="Email Address" AnchorPane.topAnchor="130.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="20.0" styleClass="custom-field" minHeight="35.0" maxHeight="35.0" prefHeight="35.0">
